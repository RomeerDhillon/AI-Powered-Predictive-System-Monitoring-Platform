# Environment variables for the monitoring system
# Copy this file to .env and update the values as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=admin-token
INFLUXDB_ORG=my-org
INFLUXDB_BUCKET=metrics

# PostgreSQL Configuration
POSTGRES_URL=postgresql://admin:admin123@localhost:5432/monitoring

# Alert Configuration
ALERT_THRESHOLD=0.5
ALERT_COOLDOWN=300

# Model Configuration
ANOMALY_THRESHOLD=0.1
MODEL_CONTAMINATION=0.1
TRAINING_INTERVAL=3600
MIN_TRAINING_SAMPLES=1000

# Slack Configuration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Configuration (optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=alerts@monitoring.com
EMAIL_TO=admin@monitoring.com,alerts@monitoring.com

# Dashboard Configuration
REACT_APP_INFLUXDB_URL=http://localhost:8086
REACT_APP_POSTGRES_URL=postgresql://admin:admin123@localhost:5432/monitoring

# Service Configuration
HOSTNAME=monitoring-host
